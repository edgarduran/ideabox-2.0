      <textarea class="form-control" id="idea-body" name="body" rows="3" cols="30"></textarea>
    </div>
    <input class="btn btn-default pull-right" id="create-idea" type="button" name="submit" value="Create Idea">
  </div>

  <h3>Your Ideas</h3>
  <div class="allIdeas">

  </div>

